<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet author="team12" id="20-05-2021_create_table_person">
        <createTable tableName="person">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="first_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="reg_date" type="TIMESTAMP"/>
            <column name="birth_date" type="DATE"/>
            <column name="e_mail" type="TEXT">
                <constraints unique="true" uniqueConstraintName="e_mail"/>
            </column>
            <column name="phone" type="INTEGER"/>
            <column name="password" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="photo" type="TEXT"/>
            <column name="about" type="TEXT"/>
            <column name="town" type="TEXT"/>
            <column name="confirmation_code" type="TEXT"/>
            <column name="is_approved" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="messages_permission" type="TEXT"/>
            <column name="last_online_time" type="TIMESTAMP"/>
            <column name="is_blocked" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>